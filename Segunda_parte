public class Main
{
    int puerta;


    public static void main(String[] args) {
		Coche unCoche = new Coche();
        unCoche.puerta(1);
        unCoche.agregarPuerta();
        System.out.println(unCoche.cantidadPuertas());
	}
}
/* Creamos la clase Coche */
class Coche{
    int puerta;
    
/*Metodo Constructor */

    public Coche(){
        puerta = 2;

    }

/* Metodos para aplicar cantidad de puertas actual y agregar nuevas. */
    public void puerta(int puerta){
        this.puerta = puerta;
    
    }

    public int cantidadPuertas() {
        return this.puerta;
    }    

    public void agregarPuerta(){
        this.puerta++;

    }
}
